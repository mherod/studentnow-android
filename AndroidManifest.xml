<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.herod.studentnow"
    android:versionCode="12"
    android:versionName="0.2.12" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.herod.studentnow.CardActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:logo="@drawable/ic_launcher2"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.ASSIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.herod.studentnow.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:logo="@drawable/ic_launcher2"
            android:parentActivityName="org.herod.studentnow.CardActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.herod.studentnow.CardActivity" />
        </activity>
        <activity
            android:name="org.herod.studentnow.CreditActivity"
            android:label="@string/title_activity_credit"
            android:logo="@drawable/ic_launcher2"
            android:parentActivityName="org.herod.studentnow.CardActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.herod.studentnow.CardActivity" />
        </activity>
        <activity
            android:name="org.herod.studentnow.SessionActivity"
            android:label="@string/title_activity_session"
            android:logo="@drawable/ic_launcher2"
            android:parentActivityName="org.herod.studentnow.CardActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.herod.studentnow.CardActivity" />
        </activity>
        
        <activity
            android:name="org.herod.studentnow.SetupActivity"
            android:label="@string/title_activity_setup_programme"
            android:launchMode="singleTask"
            android:logo="@drawable/ic_launcher2"
            android:parentActivityName="org.herod.studentnow.CardActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.herod.studentnow.CardActivity" />
        </activity>
        <activity
            android:name="org.herod.studentnow.InstitutionSelectActivity"
            android:label="@string/title_activity_institution_select"
            android:parentActivityName="org.herod.studentnow.SetupActivity" 
            android:theme="@style/FullHeightDialog">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.herod.studentnow.SetupActivity" />
        </activity>
        <activity
            android:name="org.herod.studentnow.CourseSelectActivity"
            android:label="@string/title_activity_course_search"
            android:logo="@drawable/ic_launcher2"
            android:parentActivityName="org.herod.studentnow.CardActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.hacksoc.studentnow.CardActivity" />
        </activity>

        <service
            android:name="org.herod.studentnow.service.LiveService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <receiver
            android:name="org.herod.studentnow.LiveServiceStartReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>
        
    </application>

</manifest>